<script>
  function toggleInfo(id) {
    const infoDiv = document.getElementById(id);
    const button = infoDiv.previousElementSibling;
    if (infoDiv.style.display === "none" || infoDiv.style.display === "") {
      reset();
      infoDiv.style.display = "block";
      button.src = "../img/icons/fechar.png";
      button.srcset = "../img/icons/fechar@2x.png";
    } else {
      infoDiv.style.display = "none";
      button.src = "../img/icons/abrir.png";
      button.srcset = "../img/icons/abrir@2x.png";
    }
  }
  function reset() {
    const info = document.getElementsByClassName("more-info");
    const button = document.getElementsByClassName("toggle-button");
    for (let i = 0; i < info.length; i++) {
      info[i].style.display = "none";
      button[i].src = "../img/icons/abrir.png";
      button[i].srcset = "../img/icons/abrir@2x.png";
    }
  }
</script>
